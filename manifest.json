{
	"manifest_version": 2,

	"name": "OpenNIC redirect",
	"description": "Make Chrome recognize OpenNIC TLDs",
	"version": "1.0.0",

	"permissions": [
		"*://*/*",
		"webRequest",
		"webRequestBlocking"
	],

	"background": {
		"scripts": [
			"browser-polyfill.js",
			"background.js"
		]
	},

	"icons": {
		"48": "icons/48.png",
		"128": "icons/128.png"
	}
}
